<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="planInfoItem"
            type="com.ets.app.ui.fragment.previousplans.PlanInfoItem" />

    </data>

    <com.github.c0rr4do.expansionlayout.ExpansionLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toggleOnHeaderClick="true"
        tools:expanded="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewPlanDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@{planInfoItem.planDate}"
                android:textSize="@dimen/default_text_size"
                tools:text="25. Okt 2021" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewPlanName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:alpha="?android:attr/disabledAlpha"
                android:text="@{planInfoItem.planName}"
                android:textSize="@dimen/default_text_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_forward" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/double_default_padding"
                android:background="?attr/dividerHorizontal" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="vertical"
                android:padding="@dimen/default_padding"
                android:rowCount="3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="@{@string/download_date + ':'}"
                    tools:text="Download date: " />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewDownloadDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginStart="@dimen/double_default_padding"
                    android:text="@{planInfoItem.downloadDate}"
                    android:textSize="@dimen/default_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="@{@string/download_time + ':'}"
                    tools:text="Download time: " />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewDownloadTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginStart="@dimen/double_default_padding"
                    android:text="@{planInfoItem.downloadTime}"
                    android:textSize="@dimen/default_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="@{@string/file_path + ':'}"
                    tools:text="File path: " />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewOriginalFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/double_default_padding"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@{planInfoItem.originalFilePath}"
                        android:textSize="@dimen/default_text_size" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewOpenOriginal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/half_default_padding"
                        android:adjustViewBounds="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/open_in_new" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </GridLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.github.c0rr4do.expansionlayout.ExpansionLayout>
</layout>